/* pages/mine/mine.wxss */
.head{
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-bottom: solid #f6f6f6 1px;
  border-top: solid #f6f6f6 1px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid #BFBFBF;
  font-size: 30rpx;
  margin-top: 60rpx;
}

.userinfo-nickname {
  color: #000;
  font-size: 30rpx;
}

.usermotto {
  margin-top: 200px;
}
.content{
  margin-top: 17rpx;
  border-top:solid 1px #f6f6f6;
  padding-left: 20rpx;
  background: #fff;
}
.content-title{
  border-bottom:solid 1px #f6f6f6;
  font-size: 30rpx;
  padding: 15rpx 15rpx 15rpx 0rpx;
  display: flex;
  justify-content: space-between;
}
.content-title-right{
  font-size: 25rpx;
}
.content-tabBar{
   display: flex;
   justify-content: space-around;
   border-bottom:solid 1px #f6f6f6;
   
}
.content-box{
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
}
.content-box-icon{
  width: 88rpx;
  height: 88rpx;
  margin-top: 50rpx;
}
.content-box-name{
  margin: 20rpx;
  margin-top: 10rpx;
  font-size: 20rpx;
  margin-bottom: 35rpx;
}
.foot-column{
  border-bottom:solid 1px #f6f6f6;
  border-top:solid 1px #f6f6f6;
  font-size: 30rpx;
  padding: 15rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 17rpx;
  background: #fff;
}