/* pages/detail/detail.wxss */
swiper {
  height: 700rpx;
}
.slide-image{
  height: 700rpx;
}
.goods-main-message{
  padding: 0px 20rpx;
  background: white;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #f6f6f6;
}
.goods-title{
  margin-top: 17rpx;
  font-size: 35rpx;
}
.goods-price{
  margin-top: 17rpx;
  color: #ff0000;
  font-size: 35rpx;
}
.goods-discount-price{
  margin-top: 10rpx;
  color: #aaa;
  font-size: 20rpx;
  border-bottom: 1px solid #f6f6f6;
  padding-bottom: 10rpx;
  text-decoration:line-through;

}
.goods-freight{
  margin: 10rpx 0rpx;
  color: #999;
  font-size: 25rpx;
}

.goods-main-detail{
  margin-top: 17rpx;
  background: white;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #f6f6f6;
}
.goods-detail-title{
  margin: 17rpx;
  font-size: 30rpx;
  color: #888;
  margin-left: 20rpx;
}
.detail-foot{
   bottom: 0px;
   left: 0px;
   position: fixed;
   display: flex;
   justify-content: space-around;
   flex-wrap: wrap;
   background: white;
   width: 100%;
   height: 90rpx;
   
}
.detail-foot-content-box{
  border-top:solid 1px #f6f6f6;
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
   /* flex-grow: 1; */
   width: 100rpx;
   border-right:solid 1px #f6f6f6;
}
.content-box-icon{
  width: 45rpx;
  height: 45rpx;
}
.content-box-name{
  font-size: 20rpx;
  color: #999;
}
.btn-foot-box{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
}
.btn-cart-foot-box{
  background: #57b531;
  
}
.btn-buy-foot-box{
  background: #FF5809;
}
.btn-detail-foot-title{
  color: white;
  font-size: 35rpx;
}