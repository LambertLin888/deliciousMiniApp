<template name="order-item">
<navigator url='../order-detail/order-detail?order_sn={{order_sn}}'>
  <view class='order-item-box'>
    <view class='order-item-head-box'>
      <view class='order-item-head-detail-box'>
        <text class='order-item-shop-name'>店铺：{{shop_name}}</text>
        <text class='order-item-order-sn'>订单号： {{order_sn}}</text>
      </view>
        <text class='order-item-mark'>等待买家付款</text>
    </view>
    <view class='order-item-inner-box'>
          <image class="order-item-img" src="{{pic}}" mode="aspectFill"></image>
          <view class='order-item-content-box'>
            <text class='order-item-name'>{{name}}</text>
            <view class='order-item-sub-content-box'>
              <view>
                  <text class='order-item-price'>￥{{price}}</text>
                  <text class='order-item-discount-price'>￥{{discount_price}}</text>
              </view>
              <text class='order-item-num'>X1</text>
            </view>
          </view>
    </view>
  </view>
</navigator>

</template>