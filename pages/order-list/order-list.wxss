@import "../component/order-item.wxss";
.order-head{
   top: 0px;
   left: 0px;
   position: fixed;
   display: flex;
   justify-content: space-around;
   flex-wrap: wrap;
   background: white;
   width: 100%;
   height: 75rpx;
   border-top:solid 1px #f6f6f6;
   border-bottom:solid 1px #f6f6f6;
   
}
.order-head-content-box{

   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
   box-sizing:border-box;
   color: #999;
  
}
.content-box-border-bottom{
  border-bottom:solid 2px #5cb531;
  color:#5cb531 !important;
}

.content-box-name{
  font-size: 25rpx;
  color: inherit;
}


.content-item{
  margin-top: 75rpx;
}